<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="inline-editing-fragments">
        <createTable tableName="AUTHOR">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_AUTHOR"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="inline-editing-fragments">
        <addColumn tableName="BOOK">
            <column name="AUTHOR_ID" type="UUID"/>
            <column name="COVER" type="VARCHAR(255)"/>
            <column name="PRICE" type="FLOAT"/>
            <column name="PUBLIC_DATE" type="DATE"/>
            <column name="QUANTITY" type="INT"/>
            <column name="TITLE" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="inline-editing-fragments">
        <createIndex indexName="IDX_BOOK_AUTHOR" tableName="BOOK">
            <column name="AUTHOR_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="AUTHOR_ID" baseTableName="BOOK" constraintName="FK_BOOK_ON_AUTHOR"
                                 referencedColumnNames="ID" referencedTableName="AUTHOR"/>
    </changeSet>
    <changeSet id="4" author="inline-editing-fragments">
        <dropColumn columnName="description" tableName="book"/>

        <dropColumn columnName="name" tableName="book"/>
    </changeSet>
</databaseChangeLog>